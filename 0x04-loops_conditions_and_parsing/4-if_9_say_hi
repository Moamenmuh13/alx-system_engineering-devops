#!/usr/bin/env bash
# This script displays "Best School" 10 times, and on the 9th iteration, it says "Hi" on a new line

# Initialize a counter
counter=0

# Using a while loop to repeat the message 10 times
while [ $counter -lt 10 ]; do
	# Using an if statement to check if it's the 9th iteration
	if [ $counter -eq 8 ]; then
		echo "Best School"
		echo "Hi"
	else
		echo "Best School"
	fi

	((counter++))
done
